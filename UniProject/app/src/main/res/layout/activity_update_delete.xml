<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDelete"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPhotoUpdate"
                android:layout_width="match_parent"
                android:layout_height="497dp"
                android:layout_weight="9"
                app:srcCompat="@drawable/ic_launcher_background"></ImageView>

            <Button
                android:onClick="openCamera"
                android:id="@+id/btnCameraUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Камера"></Button>

            <Button
                android:onClick="openGallery"
                android:id="@+id/btnGalleryUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Избери от галерия"></Button>

            <EditText
                android:id="@+id/editEmailUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Имейл адрес"
                android:inputType="textEmailSubject"></EditText>

            <EditText
                android:id="@+id/editTelUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Телефонен номер"
                android:inputType="phone"></EditText>

            <EditText
                android:id="@+id/editDescriptionUpdate"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:hint="Описание"
                android:inputType="text"></EditText>

            <Button
                android:onClick="update"
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Запазване"></Button>

            <Button
                android:onClick="delete"
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Запазване"></Button>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>